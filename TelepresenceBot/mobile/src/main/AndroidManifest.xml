<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.novoda.tpbot">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name=".TelebotApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    tools:ignore="AllowBackup,GoogleAppIndexingWarning">

    <activity android:name=".landing.LandingActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".human.HumanActivity"
      android:icon="@mipmap/ic_bot_controller_launcher"
      android:label="@string/Bot_Controller"/>

    <activity
      android:name=".bot.BotActivity"
      android:label="@string/telepresence" />

  </application>

</manifest>
